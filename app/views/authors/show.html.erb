<p style="color: green"><%= notice %></p>

<% content_for :title, "Detalhes do Autor" %>

<div class="container mt-4">
  <h1>Detalhes do Autor</h1>

  <div class="card">
    <div class="card-header">
      <%= @author.name %>
    </div>
    <div class="card-body">
      <p><strong>Data de nascimento:</strong> <%= @author.birthdate.present? ? @author.birthdate : "NÃ£o informada" %></p>

      <div class="mt-3 d-flex gap-2">
        <%= link_to "Editar", edit_author_path(@author), class: "btn btn-primary" %>
        <%= link_to "Voltar", authors_path, class: "btn btn-secondary" %>
        <%= button_to "Excluir este Autor", @author, method: :delete,
                      data: { confirm: "Tem certeza que deseja excluir este autor?" },
                      class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>