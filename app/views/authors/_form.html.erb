<%= form_with(model: author) do |form| %>
  <% if author.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(author.errors.count, "error") %> impediram o salvamento deste autor:</h2>

      <ul>
        <% author.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Nome, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :Data_de_nascimento, style: "display: block" %>
    <%= form.date_field :birthdate %>
  </div>

  <div>
    <%= form.submit "Salvar Autor"%>
  </div>
<% end %>
