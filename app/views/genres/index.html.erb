<% content_for :title, "Gêneros" %>

<div class="container mt-4">
  <h1>Gêneros</h1>
  <%= link_to "Cadastrar gênero", new_genre_path, class: "btn btn-primary mb-3" %>

  <ul class="list-group">
    <% @genres.each do |genre| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%= link_to genre.name, genre_path(genre) %>
        </div>
        <div>
          <%= link_to "Editar", edit_genre_path(genre), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Excluir", genre_path(genre), method: :delete, data: { confirm: "Tem certeza que deseja excluir?" }, class: "btn btn-sm btn-outline-danger" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>