<p style="color: green"><%= notice %></p>

<% content_for :title, "Detalhes do Usuário" %>

<div class="container mt-4">
  <h1>Detalhes do Usuário</h1>

  <div class="card">
    <div class="card-header">
      <%= @user.name %>
    </div>
    <div class="card-body">
      <p><strong>E-mail:</strong> <%= @user.email %></p>
      <p><strong>Criado em:</strong> <%= @user.created_at.strftime("%d/%m/%Y") %></p>
      <p><strong>Última atualização:</strong> <%= @user.updated_at.strftime("%d/%m/%Y") %></p>

      <div class="mt-3 d-flex gap-2">
        <%= link_to "Editar", edit_user_path(@user), class: "btn btn-primary" %>
        <%= link_to "Voltar", users_path, class: "btn btn-secondary" %>
        <%= button_to "Excluir este Usuário", @user, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>

<p style="color: green"><%= notice %></p>
