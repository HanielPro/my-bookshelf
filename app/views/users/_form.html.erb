<%= form_with(model: user, class: "row g-3") do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(user.errors.count, "erro") %> impediram o salvamento deste usuário:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= form.label :name, "Nome", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="col-md-6 form-check">
    <%= form.check_box :habilitaded, class: "form-check-input" %>
    <%= form.label :habilitaded, "Habilitado", class: "form-check-label" %>
  </div>

  <div class="col-md-6">
    <%= form.label :registration, "Matrícula", class: "form-label" %>
    <%= form.text_field :registration, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :password, "Senha", class: "form-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= form.submit "Salvar Usuário", class: "btn btn-success" %>
  </div>
<% end %>