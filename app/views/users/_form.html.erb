<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> impediram o salvamento deste usuário:</h2>

    <ul>
        <% user.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div>
    <%= form.label :Nome, style: "display: block" %>
    <%= form.text_field :name %>
</div>

<div>
    <%= form.label :Habilitado, style: "display: block" %>
    <%= form.checkbox :habilitaded %>
</div>

<div>
    <%= form.label :Tipo, style: "display: block" %>
    <%= form.text_field :registration %>
</div>

<div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
</div>

<div>
    <%= form.label :Senha, style: "display: block" %>
    <%= form.text_field :password %>
</div>

<div>
    <%= form.submit "Salvar Usuário"%>
</div>
<% end %>
