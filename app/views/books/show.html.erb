<p style="color: green"><%= notice %></p>

<% content_for :title, "Detalhes do Livro" %>

<div class="container mt-4">
  <h1>Detalhes do Livro</h1>

  <div class="card">
    <div class="card-header">
      <%= @book.title %>
    </div>
    <div class="card-body">
      <p><strong>Editora:</strong> <%= @book.publisher %></p>
      <p><strong>Prateleira:</strong> <%= @book.shelf %></p>
      <p><strong>Ano de Publicação:</strong> <%= @book.year_published %></p>
      <p><strong>Autores:</strong> <%= @book.authors.any? ? @book.authors.map(&:name).join(", ") : "Nenhum autor cadastrado" %></p>
      <p><strong>Gêneros:</strong> <%= @book.genres.any? ? @book.genres.map(&:name).join(", ") : "Nenhum gênero cadastrado" %></p>

      <div class="mt-3 d-flex gap-2">
        <%= link_to "Editar", edit_book_path(@book), class: "btn btn-primary" %>
        <%= link_to "Voltar", books_path, class: "btn btn-secondary" %>
        <%= button_to "Excluir este Livro", @book, method: :delete, data: { confirm: "Tem certeza que deseja excluir?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
